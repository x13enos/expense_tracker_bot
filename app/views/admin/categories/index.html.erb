<div class='row'>
  <div class='col-lg-12'>
    <h1 class='page-header'>Categories</h1>
    <%= link_to 'Add category', new_admin_category_path, :class => "btn btn-primary float-right"%>
  </div>
</div>


<div>
  <% if @categories.present? %>
    <div class='panel-body'>
      <div class='table-responsive'>
        <table class='table table-hover'>
          <thead>
            <tr>
              <th>Name</th>
              <th>Financial type</th>
              <th>User</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
              <%= render partial: "category", locals: { category: category } %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <h1>We don't have any of categories. :(</h1>
  <% end %>
</div>
